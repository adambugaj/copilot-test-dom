---
// Layout główny, używaj go w stronach
const { children } = Astro.slots;
const { site } = Astro;
---
<!doctype html>
<html lang="pl">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- SEO props ustawione przez komponent SEO -->
    <slot name="head" />
    <link rel="icon" href="/favicon.svg" />
  </head>
  <body>
    <header style="padding:1rem;border-bottom:1px solid #eee;">
      <a href="/" style="font-weight:700">Moje Portal</a>
    </header>
    <main style="max-width:900px;margin:1.5rem auto;padding:0 1rem;">
      {children}
    </main>
    <footer style="text-align:center;padding:2rem 0;border-top:1px solid #eee;">
      <small>© {new Date().getFullYear()} Moje Portal — Built with Astro</small>
    </footer>
  </body>
</html>